<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--todo  center spinner (adapter?)-->
    <!--todo  center the amounts.-->
    <!--todo  rethink the other text on screen.-->


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/w_and_m_convert_unit_1_spinner"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:gravity="clip_horizontal|center|center_horizontal"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true"
        android:layout_alignWithParentIfMissing="false"
        android:textAlignment="center" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/w_and_m_convert_unit_2_spinner"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true"
        android:layout_alignWithParentIfMissing="false"
        android:textAlignment="center"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Changed To"
        android:id="@+id/textView2"
        android:layout_below="@+id/w_and_m_convert_unit_1_spinner"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/w_and_m_convert_amount_1"
        android:layout_below="@+id/textView"
        android:inputType="numberDecimal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Amount to Convert" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/w_and_m_convert_amount_2"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Of"
        android:id="@+id/textView3"
        android:layout_below="@+id/w_and_m_convert_amount_1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gives"
        android:id="@+id/textView4"
        android:layout_below="@+id/w_and_m_convert_unit_2_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />
    <ListView
        android:id="@android:id/list"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>
