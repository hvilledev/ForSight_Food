<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/w_and_mItemId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/w_and_m_unit_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="1"
        android:text="1"
        android:textSize="15sp"
        android:layout_toStartOf="@+id/w_and_m_ItemUnitA"
        android:layout_toEndOf="@+id/w_and_mItemId"
        android:layout_alignBaseline="@+id/w_and_m_ItemUnitA"
        android:layout_alignBottom="@+id/w_and_m_ItemUnitA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/w_and_m_ItemUnitA"
        android:layout_alignEnd="@+id/w_and_m_ItemUnitA"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/w_and_m_ItemUnitA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liter"
        android:textSize="15sp"
        android:maxEms="55"
        android:layout_toStartOf="@+id/w_and_m_ItemArrow"
        android:layout_toEndOf="@+id/w_and_mItemId"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:password="false"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/w_and_m_ItemArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="----->"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/w_and_m_ItemFactor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0000"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/w_and_m_ItemArrow"
        android:layout_toEndOf="@+id/w_and_m_ItemArrow"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/w_and_m_ItemUnitB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="60pt"
        android:text="Cup"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/w_and_m_ItemFactor"
        android:layout_toEndOf="@+id/w_and_m_ItemFactor"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp" />


</RelativeLayout>


