<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/w_and_mItemId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/w_and_m_unit_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="1"
        android:text="@string/_1"
        android:textSize="15sp"
        android:layout_toStartOf="@+id/w_and_m_ItemUnitA"
        android:layout_toLeftOf="@+id/w_and_m_ItemUnitA"
        android:layout_toEndOf="@+id/w_and_mItemId"
        android:layout_toRightOf="@+id/w_and_mItemId"
        android:layout_alignBaseline="@+id/w_and_m_ItemUnitA"
        android:layout_alignBottom="@+id/w_and_m_ItemUnitA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/w_and_m_ItemUnitA"
        android:layout_alignEnd="@+id/w_and_m_ItemUnitA"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/w_and_m_ItemUnitA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/liter"
        android:textSize="15sp"
        android:maxEms="55"
        android:layout_toStartOf="@+id/w_and_m_ItemArrow"
        android:layout_toLeftOf="@+id/w_and_m_ItemArrow"
        android:layout_toEndOf="@+id/w_and_mItemId"
        android:layout_toRightOf="@+id/w_and_mItemId"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/w_and_m_ItemArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rightarrow"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/w_and_m_ItemFactor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero4decimal"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/w_and_m_ItemArrow"
        android:layout_toEndOf="@+id/w_and_m_ItemArrow"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/w_and_m_ItemUnitB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="60pt"
        android:text="@string/cup"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/w_and_m_ItemFactor"
        android:layout_toEndOf="@+id/w_and_m_ItemFactor"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"/>


</RelativeLayout>


